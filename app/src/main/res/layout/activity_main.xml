<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="227dp"
        android:layout_height="250dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="&quot;I can calculate the motion of heavenly bodies, but not the madness of people.&quot; - Issac Newton -"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/backVolum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backVolum"
        app:layout_constraintTop_toTopOf="@+id/backVolum"
        app:srcCompat="@drawable/round_rect" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/backVolum"
        app:layout_constraintEnd_toEndOf="@+id/backVolum"
        app:layout_constraintStart_toStartOf="@+id/backVolum"
        app:layout_constraintTop_toTopOf="@+id/backVolum"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/backVolum"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/ic_baseline_volume_up_24"
        app:tint="@color/gray" />

    <ImageView
        android:id="@+id/frontVolum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/backVolum"
        app:layout_constraintEnd_toEndOf="@+id/backVolum"
        app:layout_constraintStart_toStartOf="@+id/backVolum"
        app:layout_constraintTop_toTopOf="@+id/backVolum"
        app:tint="@color/dark_gray"
        app:srcCompat="@drawable/clip" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.22"
        app:srcCompat="@drawable/oval"
        app:tint="#55000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="( Press Anywhere )"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/clickArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>